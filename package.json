{
  "name": "arrpc",
  "version": "3.5.0",
  "description": "Open Discord RPC server for atypical setups",
  "main": "src/server.js",
  "scripts": {
    "startBun": "bun ./src/index.ts",
    "start": "node ./src/index.ts",
    "startBundle": "bun build ./src/index.js --target node --format esm --packages bundle --minify --outdir build && node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenAsar/arrpc.git"
  },
  "author": "OpenAsar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenAsar/arrpc/issues"
  },
  "homepage": "https://github.com/OpenAsar/arrpc#readme",
  "dependencies": {
    "picocolors": "^1.1.1",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "koffi": "^2.14.1"
  },
  "type": "module",
  "bin": {
    "arrpc": "src/index.js"
  },
  "trustedDependencies": [
    "koffi"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1"
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
